<% if flash.empty? %>
    $('.flash-messages').html(' ');
<% else %>
    $('.flash-messages').html(' ').html('<%= j render 'layouts/flash' %>');
    <% flash.clear %>
<% end %>


<% if @answer.errors.present? %>
    <% @answer.errors.full_messages.each do |message| %>
        $('.answer-errors').html('<%= j message %>');
    <% end %>
<% else %>
    $('.answers').append('<%= j render @answer %>');
    $('textarea#answer_body').val('');
    $('.answer-errors').html('');
<% end %>



